<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>AftershipAPI</PackageId>
    <Authors>Adam Worley</Authors>
    <Company>AJW Aviation</Company>
    <PackageProjectUrl>https://github.com/ajwgroup/AftershipAPI</PackageProjectUrl>
    <PackageLicense>https://github.com/ajwgroup/AftershipAPI/blob/master/LICENSE</PackageLicense>
    <PackageTags>Aftership API AJW Track Tracking Courier Couriers</PackageTags>
    <Description>.NET standard 2.1 package for the Aftership API</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="api\**" />
    <EmbeddedResource Remove="api\**" />
    <None Remove="api\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>
